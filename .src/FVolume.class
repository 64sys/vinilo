Public Sub Form_Open()

  sldVolume.MinValue = 0
  sldVolume.MaxValue = 100
  sldVolume.Value = FMain.intVolume

  sldVolume.X = (Me.Width / 2) - (sldVolume.Width / 2)

  sldVolume.SetFocus

End

Public Sub sldVolume_Change()

  FMain.intVolume = sldVolume.Value
  Music.Volume = sldVolume.Value

End

Public Sub sldVolume_LostFocus()

  Settings["Preferences/volume"] = sldVolume.Value
  Me.Close

End
