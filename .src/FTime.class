Public Sub Form_Open()

  sldTimeAvatar.MinValue = 0
  sldTimeAvatar.MaxValue = FMain.intMaxTime
  sldTimeAvatar.Value = FMain.intCurrTime

  sldTimeAvatar.Y = (Me.Height / 2) - (sldTimeAvatar.Height / 2)

  sldTimeAvatar.SetFocus

End

Public Sub sldTimeAvatar_LostFocus()

  Me.Close

End

Public Sub tmrAvatar_Timer()

  sldTimeAvatar.Value = FMain.intCurrTime

End

Public Sub sldTimeAvatar_MouseUp()

  FMain.intCurrTime = sldTimeAvatar.Value

  Music.Pos = FMain.intCurrTime / 1000

End
