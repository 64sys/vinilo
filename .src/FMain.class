Public Sub cmdLookup() ''Actualiza la coleccion de música

  Dim stxFilesRaw As New String[]
  Dim intR As Integer
  Dim stxFiles As New String[]
  Dim intF As Integer
  Dim stxFileInfo As New String[]
  Dim stxReff As New String[]
  Dim strTag As String
  Dim stxTag As New String[]
  Dim strVal As String
  Dim stxVal As New String[]
  Dim stxTagOk As New String[]
  Dim stxValues As New String[]
  Dim intI As Integer
  Dim intK As Integer
  Dim intU As Integer
  Dim strPathRaw As String
  Dim strPathPro As String
  Dim intE As Integer
  Dim stxFilesTmp As New String[]
  Dim strFileTmp As String
  Dim stxFileError As New String[]
  Dim strFileTempPath As String
  Dim strFileTempTime As String
  Dim strFileDBPath As String
  Dim strFileDBTime As String
  Dim strQFiles As String
  Dim resFiles As Result
  Dim strFileTempDir As String
  Dim strFileTempName As String
  Dim strFileTempExt As String
  Dim strQrefresh As String
  Dim resFilesRefresh As Result

  If bolSacanXDGDir = True Then
    stxSacanDir.Add(strSacanXDGDir)
  Endif

  stxFilesRaw.Clear
  stxFiles.Clear
  stxTagOk.Clear
  stxFileError.Clear

  stxTagOk.Add("Title")
  stxTagOk.Add("Track")
  stxTagOk.Add("Artist")
  stxTagOk.Add("Album")
  stxTagOk.Add("Genre")
  stxTagOk.Add("Year")
  stxTagOk.Add("FileType")
  stxTagOk.Add("AudioBitrate")
  stxTagOk.Add("ChannelMode")
  stxTagOk.Add("Duration")
  stxTagOk.Add("SampleRate")
  stxTagOk.Add("FileSize")
  stxTagOk.Add("FileTime")
  stxTagOk.Add("FileCRC32")
  stxTagOk.Add("FileVersion")
  stxTagOk.Add("FileDirectory")
  stxTagOk.Add("FileName")

  stxReff.Clear

  stxReff.Add("trackartist:artist:artistindx:artistname")
  stxReff.Add("trackalbum:album:albumindx:albumname")
  stxReff.Add("trackgenre:genre:genreindx:genrename")
  stxReff.Add("tracktype:type:typeindx:typename")
  stxReff.Add("trackfileversion:fileversions:fverindx:fvername")

  For intE = 0 To stxSacanDir.Max

    strDirectory = stxSacanDir[intE]

    stxFilesTmp.Clear
    stxFilesTmp = Mutility.ScanFolder(strDirectory, "mp3,ogg")

    For Each strFileTmp In stxFilesTmp
      stxFilesRaw.Add(strFileTmp)
    Next
    stxFilesTmp.Clear
  Next

  stxFilesRaw = MUtility.ListDeldup(stxFilesRaw)

  'Primero analizo si el archivo existe y si es así verifico si la fecha cambio
  'Todo con la finalidad de obtener una lista de archivos a procesar

  For intR = 0 To stxFilesRaw.Max
    strFileTempPath = ""
    strFileTempTime = ""
    strFileTempDir = ""
    strFileTempName = ""
    strFileTempExt = ""

    strFileDBPath = ""
    strFileDBTime = ""

    strFileTempPath = stxFilesRaw[intR]

    If Stat(stxFilesRaw[intR]).Type = gb.File Then
      strFileTempTime = Format$((Stat(stxFilesRaw[intR]).Time), "yyyymmddhhnnss")
      strFileTempDir = File.Dir(stxFilesRaw[intR])
      strFileTempName = File.BaseName(stxFilesRaw[intR])
      strFileTempExt = File.Ext(stxFilesRaw[intR])

    Endif

    strQFiles = "select filpath,filtime from files where filpath='" & strFileTempPath & "'"
    resFiles = FMain.conDB.Exec(strQFiles)

    If resFiles.Available Then
      Select resFiles.Count
        Case 1 ' El registro si existe [update]

          stxFiles.Add(strFileTempPath)
          resFiles.MoveFirst
          strFileDBPath = resFiles["filpath"]
          strFileDBTime = resFiles["filtime"]

          If strFileTempTime <> strFileDBTime Then
            strQrefresh = "update files set filtime='" & strFileTempTime & "' where filpath='" & strFileTempPath & "'"
            stxFiles.Add(strFileTempPath)
          Endif

      End Select

    Else ' El registro no existe [insert]
      stxFiles.Add(strFileTempPath)
      strQrefresh = "insert into files (filindx,filpath,filtime,filcrc32,fildir,filname,filext,filsize) values(Null" &
        ",'" & strFileTempPath & "'" &
        ",'" & strFileTempTime & "'" &
        ",'" & "" & "'" &
        ",'" & strFileTempDir & "'" &
        ",'" & strFileTempName & "'" &
        ",'" & strFileTempExt & "'" &
        ",'" & "" & "')"

      resFilesRefresh = FMain.conDB.Exec(strQrefresh)

    Endif

    For intF = 0 To stxFiles.Max
      strPathRaw = stxFiles[intF]
      strPathPro = MUtility.ConvertPath(strPathRaw)
      strPathPro = MUtility.Chek4SQL(strPathPro)

      If strPathRaw <> strPathPro Then
        'Move strPathRaw To strPathPro
        stxFileInfo.Clear
        ' El nombre del archivo tiene problemas
        stxFileError.Add("Bad File Name" & ":" & strPathRaw)
      Else
        stxFileInfo.Clear
        stxFileInfo = MUtility.FileInfo(strPathPro)
      Endif
      Wait 0.1

      'Segundo analizo si el CRC32 cambio o no existe

      'stxFileInfo.Clear

      'stxFileInfo = MUtility.FileInfo(strPathPro)

      'Agrego la carpeta inicial porque RDir devuelvel la ruta relativa

      stxTag.Clear
      stxVal.Clear

      For intI = 0 To stxFileInfo.Max

        strTag = Split(stxFileInfo[intI], ":")[0]
        strVal = MUtility.Chek4SQL(Split(stxFileInfo[intI], ":")[1])

        Select String.LCase(strTag)
          Case "year"
            stxTag.Add(strTag)
            Select strVal
              Case ""
                strVal = "1000"
              Case Else
                strVal = Format(strVal, "0000")
            End Select

            stxVal.Add(strVal)

          Case Else
            stxTag.Add(strTag)
            stxVal.Add(strVal)

        End Select

      Next

      stxValues.Clear

      stxValues.Add("Null") ' indx

      For intK = 0 To stxTagOk.Max
        intU = stxTag.Find(stxTagOk[intK])
        If intU <> -1 Then
          stxValues.Add(stxVal[intU])
        Else
          stxValues.Add("")
        Endif

      Next

      stxTag.Clear
      stxVal.Clear

      If stxValues.Find("") = -1 Then
        MData.ImportFileMetadata(conDB, "track", stxReff, stxValues)
      Else

      Endif

      stxValues.Clear

      ArrangeNav()

    Next
  Next

End

